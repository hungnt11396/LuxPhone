<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailNewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDetailNews"
            android:background="@color/colorPrimary"
            app:title="@string/title_news"
            app:titleTextColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <ImageView
            android:layout_below="@+id/imgTitleDetailNews"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imgDetailNews"/>
        <TextView
            android:justificationMode="inter_word"
            android:text="tiêu đề"
            android:layout_gravity="center_vertical|end"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleDetailNews"/>

        <TextView
            android:justificationMode="inter_word"
            android:gravity="fill"
            android:textColor="#000000"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/tvContentDetailNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>